<div id="form">
    <h2>Edit Movie</h2>
    <form action="/movie/{{movie._id}}/edit" method="post">

        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="{{ movie.title }}">

        <label for="genre">Genre</label>
        <input type="text" name="genre" id="genre" value="{{ movie.genre }}">

        <label for="plot">Plot</label>
        <textarea name="plot" id="plot">{{ movie.plot }}</textarea>

        <label for="cast">Select cast members</label>
        <select name="cast" id="cast" multiple>

        {{#each optionsArray}}
            {{{this}}}
        {{/each}}

        </select><br/>

        <input type="submit" value="Update Movie">

    </form>
</div>